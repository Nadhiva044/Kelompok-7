class Menu:
    def __init__(self, nama, harga):
        self.nama = nama
        self.harga = harga
        self.next = None

class Pesanan:
    def __init__(self):
        self.head = None

    def tambah_menu(self, nama, harga):
        new_menu = Menu(nama, harga)
        if not self.head:
            self.head = new_menu
        else:
            current = self.head
            while current.next:
                current = current.next
            current.next = new_menu

    def tampilkan_pesanan(self):
        current = self.head
        while current:
            print(f"Nama {current.nama}: Harga {current.harga}")
            current = current.next

    def total_harga(self):
        total = 0
        current = self.head
